@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Sign Up for Appointment", "SignUp", "Sessions")<br />
        @Html.ActionLink("Check Current Appointments", "UsersUpcoming", "Sessions")
    </div>
</div>

@{
    if (ViewBag.IsTutor == true)
    {
        <div class="row">
            <div class="col-md-12">
                <p>For Tutors</p>
                @Html.ActionLink("Check Upcoming Tutoring Sessions", "TutorsUpcoming", "Sessions")
            </div>
        </div>
    }
}